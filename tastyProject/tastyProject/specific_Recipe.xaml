<Window x:Class="tastyProject.specific_Recipe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tastyProject"
        mc:Ignorable="d"
        Title="specific_Recipe" Height="450" Width="800" ResizeMode="CanResize" WindowState="Maximized">

    <Window.Resources>
        <Image x:Key="beforeLike" Source="images\images\beforeLike.png"  Height="50" Width="50" Stretch="Fill"/>
        <Image x:Key="afterLike" Source="images\images\afterLike.png" Height="50" Width="50" Stretch="Fill"/>
    </Window.Resources>

    <Grid>
        <Image Name="image" HorizontalAlignment="Left" Height="180" Margin="0,22,0,0" VerticalAlignment="Top" Width="505"/>
        <TextBox x:Name="textBox1" TextAlignment="Right" HorizontalAlignment="Left" Height="180" Margin="529,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="220"/>
        <TextBox x:Name="textBox2" TextAlignment="Right" HorizontalAlignment="Left" Margin="24,275,0,-275" TextWrapping="Wrap" Text="TextBox" Width="725"/>
        <Button x:Name="like" Margin="695,200,43,170" Click="Button_Like" Height="50" Width="50" >
            <DynamicResource ResourceKey="beforeLike"/>
        </Button>
    </Grid>
</Window>
